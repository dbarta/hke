<div class="container px-4 mx-auto my-8">
  <div class="max-w-3xl mx-auto">
    <div class="flex items-center justify-between mb-4">
      <h1 class="h3"><%= link_to "Cemeteries", cemeteries_path %> > Cemetery #<%= @cemetery.id %></h1>
      <%= link_to t("edit"), edit_cemetery_path(@cemetery), class: "btn btn-link" %>
    </div>

    <div class="p-8 bg-white rounded shadow">
      <div class="mb-4">
        <h5>Name</h5>
        <%= @cemetery.name %>
      </div>
      <div class="mb-4">
        <h5>City</h5>
        <%= @cemetery.city %>
      </div>
      <div class="mb-4">
        <h5>Country</h5>
        <%= @cemetery.country %>
      </div>
    </div>
  </div>
</div>
