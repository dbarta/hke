<% content_for :hide_main_navbar, true %>

<!-- Community Admin Navbar -->
<nav class="bg-white shadow-sm rounded-lg mb-6">
  <div class="px-6 py-4">
    <div class="flex items-center justify-between">
      <!-- Right side: Navigation menu -->
      <div class="flex space-x-4 space-x-reverse">
        <%= link_to t('community_admin.navbar.message_approval'), hke.root_path,
            class: "px-4 py-2 text-blue-600 hover:text-blue-800 font-medium" %>
        <%= link_to t('community_admin.navbar.deceased_people'), hke.deceased_people_path,
            class: "px-4 py-2 text-blue-600 hover:text-blue-800 font-medium" %>
        <%= link_to t('community_admin.navbar.contact_people'), hke.contact_people_path,
            class: "px-4 py-2 text-blue-600 hover:text-blue-800 font-medium" %>
        <%# TODO: Add community users management route %>
        <%# link_to t('community_admin.navbar.users'), hke.community_users_path,
            class: "px-4 py-2 text-blue-600 hover:text-blue-800 font-medium" %>
        <%= link_to t('community_admin.navbar.import_csv'), hke.csv_imports_path,
            class: "px-4 py-2 text-blue-600 hover:text-blue-800 font-medium" %>
        <%= link_to t('community_admin.navbar.message_management'), hke.message_management_index_path,
            class: "px-4 py-2 text-blue-600 hover:text-blue-800 font-medium" %>
        <%= link_to t('community_admin.navbar.logs', default: '\u05dc\u05d5\u05d2\u05d9\u05dd'), hke.logs_path,
            class: "px-4 py-2 text-blue-600 hover:text-blue-800 font-medium" %>
      </div>

      <!-- Left side: Back to system admin (for sysadmins) + User profile -->
      <div class="flex items-center">
        <% if current_user.system_admin? %>
          <%= link_to t('admin.dashboard.community_switching.back_to_system_admin'),
              hke.admin_root_path,
              class: "px-4 py-2 text-blue-600 hover:text-blue-800 font-medium" %>
        <% end %>
        <div class="relative group ml-2">
          <button class="flex items-center px-4 py-2 text-gray-700 hover:text-gray-900 font-medium">
            <svg class="w-4 h-4 ml-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 9l-7 7-7-7"></path>
            </svg>
            <%= current_user.name %>
          </button>
          <div class="absolute right-0 mt-2 w-48 bg-white rounded-md shadow-lg py-1 z-50 opacity-0 invisible group-hover:opacity-100 group-hover:visible transition-all duration-200">
            <%= link_to t('profile'), main_app.edit_user_registration_path,
                class: "block px-4 py-2 text-sm text-gray-700 hover:bg-gray-100" %>
            <%= link_to t('logout'), main_app.destroy_user_session_path,
                data: { turbo_method: :delete, turbo_confirm: t('are_you_sure') },
                class: "block px-4 py-2 text-sm text-gray-700 hover:bg-gray-100" %>
          </div>
        </div>
      </div>
    </div>
  </div>
</nav>
