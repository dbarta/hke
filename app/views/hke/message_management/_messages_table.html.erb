<div class="overflow-x-auto">
  <% if messages.any? %>
    <table class="min-w-full">
      <thead class="bg-gray-50">
        <tr>
          <th class="px-6 py-3 text-right text-xs font-medium text-gray-500 uppercase tracking-wider">
            <%= t('message_management.table.sent_at') %>
          </th>
          <th class="px-6 py-3 text-right text-xs font-medium text-gray-500 uppercase tracking-wider">
            <%= t('message_management.table.recipient') %>
          </th>
          <th class="px-6 py-3 text-right text-xs font-medium text-gray-500 uppercase tracking-wider">
            <%= t('message_management.table.method') %>
          </th>
          <th class="px-6 py-3 text-right text-xs font-medium text-gray-500 uppercase tracking-wider">
            <%= t('message_management.table.status') %>
          </th>
          <th class="px-6 py-3 text-right text-xs font-medium text-gray-500 uppercase tracking-wider">
            <%= t('message_management.table.message_preview') %>
          </th>
          <th class="px-6 py-3 text-right text-xs font-medium text-gray-500 uppercase tracking-wider">
            <%= t('actions') %>
          </th>
        </tr>
      </thead>
      <tbody class="bg-white divide-y divide-gray-200">
        <% messages.each do |message| %>
          <tr class="hover:bg-gray-50">
            <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-900 text-right">
              <%= message.created_at.strftime("%b %d, %Y %H:%M") %>
            </td>
            <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-900 text-right">
              <div>
                <% if message.respond_to?(:phone) && message.phone.present? %>
                  <div class="font-medium"><%= message.phone %></div>
                <% end %>
                <% if message.respond_to?(:email) && message.email.present? %>
                  <div class="text-gray-500"><%= message.email %></div>
                <% end %>
              </div>
            </td>
            <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-900 text-right">
              <% if message.respond_to?(:delivery_method) %>
                <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium 
                  <%= message.delivery_method == 'sms' ? 'bg-blue-100 text-blue-800' : 'bg-green-100 text-green-800' %>">
                  <%= message.delivery_method&.upcase %>
                </span>
              <% else %>
                <span class="text-gray-500">-</span>
              <% end %>
            </td>
            <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-900 text-right">
              <% if message.respond_to?(:status) %>
                <% case message.status %>
                <% when 'sent' %>
                  <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-green-100 text-green-800">
                    <%= t('message_management.statuses.sent') %>
                  </span>
                <% when 'failed' %>
                  <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-red-100 text-red-800">
                    <%= t('message_management.statuses.failed') %>
                  </span>
                <% when 'pending' %>
                  <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-yellow-100 text-yellow-800">
                    <%= t('message_management.statuses.pending') %>
                  </span>
                <% else %>
                  <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-gray-100 text-gray-800">
                    <%= message.status %>
                  </span>
                <% end %>
              <% else %>
                <span class="text-gray-500">-</span>
              <% end %>
            </td>
            <td class="px-6 py-4 text-sm text-gray-900 text-right">
              <div class="max-w-xs">
                <% if message.respond_to?(:full_message) && message.full_message.present? %>
                  <%= truncate(message.full_message, length: 100) %>
                <% elsif message.respond_to?(:future_message) && message.future_message&.full_message.present? %>
                  <%= truncate(message.future_message.full_message, length: 100) %>
                <% else %>
                  <span class="text-gray-500">-</span>
                <% end %>
              </div>
            </td>
            <td class="px-6 py-4 whitespace-nowrap text-sm font-medium text-right">
              <% if message.respond_to?(:status) && message.status == 'failed' %>
                <%= link_to t('message_management.table.view_error'), 
                    message_management_path(message), 
                    class: "text-red-600 hover:text-red-900" %>
              <% else %>
                <%= link_to t('show'), 
                    message_management_path(message), 
                    class: "text-blue-600 hover:text-blue-900" %>
              <% end %>
            </td>
          </tr>
        <% end %>
      </tbody>
    </table>
  <% else %>
    <div class="text-center py-8 text-gray-500">
      <%= t('message_management.index.no_messages') %>
    </div>
  <% end %>
</div>
