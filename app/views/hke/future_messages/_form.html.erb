<%= form_with(model: future_message) do |form| %>
  <%= render "shared/error_messages", resource: form.object %>


  <div class="flex items-center justify-between mb-4 h4">

        <%= t("shared.scaffold.edit.title", model: t("future_message")) + ": #{@future_message.name}" %>
        <div class="mr-auto flex">
          <%= form.button t('save_future_message'), class: "btn btn-link" %>
          <% if form.object.persisted? %>
            <%= link_to t("delete"), form.object, class: "btn btn-link", data: { turbo_method: :delete, turbo_confirm: t("are_you_sure") } %>
          <% end %>
          <%= link_to t("cancel"), @future_message, class: "btn btn-link" %>
        </div>
  </div>

  <%= render "future_message_fields", form: form %>
<% end %>
