<%= render 'hke/shared/community_admin_navbar' %>

<div class="container mx-auto p-4" style="direction: rtl;">
  <div class="max-w-6xl mx-auto">
    <div class="bg-white rounded-lg shadow-sm p-6">
      <div class="flex flex-col gap-4 md:flex-row md:items-center md:justify-between mb-6">
        <h1 class="text-2xl font-bold text-right flex-1"><%= t('csv_imports.index.title', default: 'פעולות העלאת נתונים') %></h1>
        <% if @csv_imports.any? %>
          <div class="flex flex-row gap-3" style="direction: ltr;">
            <%= link_to t('csv_imports.index.clear_all', default: 'מחק את כל הלוגים'), hke.destroy_all_csv_imports_path,
                class: "px-4 py-2 bg-blue-600 text-white rounded-md text-sm font-medium hover:bg-blue-700 whitespace-nowrap",
                data: {
                  turbo_method: :delete,
                  turbo_confirm: t('csv_imports.index.clear_all_confirm', default: 'למחוק את כל הלוגים?')
                } %>
            <%= link_to t('csv_imports.index.new_import', default: 'יבוא חדש'), hke.new_csv_import_path,
                class: "px-4 py-2 bg-blue-600 text-white rounded-md text-sm font-medium hover:bg-blue-700 whitespace-nowrap ml-2" %>
          </div>
        <% end %>
      </div>

      <% if @csv_imports.any? %>
        <div class="overflow-x-auto">
          <table class="min-w-full divide-y divide-gray-200">
            <thead class="bg-gray-50">
              <tr>
                <th class="px-6 py-3 text-right text-xs font-medium text-gray-700 uppercase tracking-wider">
                  <%= t('csv_imports.index.run_name', default: 'שם הריצה') %>
                </th>
                <th class="px-6 py-3 text-right text-xs font-medium text-gray-700 uppercase tracking-wider">
                  <%= t('csv_imports.index.uploaded_by', default: 'הועלה על ידי') %>
                </th>
                <th class="px-6 py-3 text-right text-xs font-medium text-gray-700 uppercase tracking-wider">
                  <%= t('csv_imports.index.uploaded_at', default: 'תאריך העלאה') %>
                </th>
                <th class="px-6 py-3 text-right text-xs font-medium text-gray-700 uppercase tracking-wider">
                  <%= t('csv_imports.index.status', default: 'סטטוס') %>
                </th>
                <th class="px-6 py-3 text-right text-xs font-medium text-gray-700 uppercase tracking-wider">
                  <%= t('csv_imports.index.total_input_rows', default: 'סה״כ שורות') %>
                </th>
                <th class="px-6 py-3 text-right text-xs font-medium text-gray-700 uppercase tracking-wider">
                  <%= t('csv_imports.index.error_rows', default: 'שורות שגיאה') %>
                </th>
                <th class="px-6 py-3 text-right text-xs font-medium text-gray-700 uppercase tracking-wider">
                  <%= t('csv_imports.index.deceased_input', default: 'נפטרים בקלט') %>
                </th>
                <th class="px-6 py-3 text-right text-xs font-medium text-gray-700 uppercase tracking-wider">
                  <%= t('csv_imports.index.contacts_input', default: 'אנשי קשר בקלט') %>
                </th>
                <th class="px-6 py-3 text-right text-xs font-medium text-gray-700 uppercase tracking-wider">
                  <%= t('csv_imports.index.new_vs_existing', default: 'חדש / קיים') %>
                </th>
                <th class="px-6 py-3 text-right text-xs font-medium text-gray-700 uppercase tracking-wider">
                  <%= t('csv_imports.index.progress', default: 'התקדמות') %>
                </th>
                <th class="px-6 py-3 text-right text-xs font-medium text-gray-700 uppercase tracking-wider">
                  <%= t('csv_imports.index.actions', default: 'פעולות') %>
                </th>
              </tr>
            </thead>
            <tbody class="bg-white divide-y divide-gray-200">
              <% @csv_imports.each do |import| %>
                <tr class="hover:bg-gray-50">
                  <td class="px-6 py-4 text-sm text-gray-900 text-right">
                    <%= import.name.presence || t('csv_imports.index.unnamed', default: 'ללא שם') %>
                  </td>
                  <td class="px-6 py-4 text-sm text-gray-900 text-right">
                    <%= import.user.name %>
                  </td>
                  <td class="px-6 py-4 text-sm text-gray-900 text-right">
                    <%= import.created_at.strftime('%b %d, %H:%M') %>
                  </td>
                  <td class="px-6 py-4 text-sm text-right">
                    <% case import.status %>
                    <% when 'pending' %>
                      <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-yellow-100 text-yellow-800">
                        <%= t('csv_imports.statuses.pending', default: 'ממתין') %>
                      </span>
                    <% when 'processing' %>
                      <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-blue-100 text-blue-800">
                        <%= t('csv_imports.statuses.processing', default: 'בעיבוד') %>
                      </span>
                    <% when 'completed' %>
                      <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-green-100 text-green-800">
                        <%= t('csv_imports.statuses.completed', default: 'הושלם') %>
                      </span>
                    <% when 'failed' %>
                      <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-red-100 text-red-800">
                        <%= t('csv_imports.statuses.failed', default: 'נכשל') %>
                      </span>
                    <% end %>
                  </td>
                  <td class="px-6 py-4 text-sm text-gray-900 text-right">
                    <%= import.total_rows %>
                  </td>
                  <td class="px-6 py-4 text-sm text-gray-900 text-right">
                    <% if import.failed_rows > 0 %>
                      <span class="text-red-600 font-medium"><%= import.failed_rows %></span>
                    <% else %>
                      <span class="text-gray-500">0</span>
                    <% end %>
                  </td>
                  <td class="px-6 py-4 text-sm text-gray-900 text-right">
                    <%= import.total_deceased_in_input %>
                  </td>
                  <td class="px-6 py-4 text-sm text-gray-900 text-right">
                    <%= import.total_contacts_in_input %>
                  </td>
                  <td class="px-6 py-4 text-sm text-gray-900 text-right">
                    <span class="text-green-600 font-medium"><%= import.new_deceased %></span> /
                    <span class="text-blue-600 font-medium"><%= import.existing_deceased %></span>
                  </td>
                  <td class="px-6 py-4 text-sm text-right">
                    <% if import.processing? || import.completed? %>
                      <div class="flex items-center gap-2">
                        <div class="flex-1 bg-gray-200 rounded-full h-2">
                          <div class="bg-blue-600 h-2 rounded-full transition-all duration-300"
                               style="width: <%= import.progress_percentage %>%"></div>
                        </div>
                        <span class="text-xs text-gray-600 whitespace-nowrap">
                          <%= import.progress_percentage %>%
                        </span>
                      </div>
                    <% else %>
                      <span class="text-xs text-gray-500">-</span>
                    <% end %>
                  </td>
                  <td class="px-6 py-4 text-sm text-right">
                    <div class="flex items-center justify-end gap-4">
                      <%= link_to t('csv_imports.index.view', default: 'צפה'), hke.csv_import_path(import),
                          class: "text-blue-600 hover:text-blue-800 font-medium" %>
                      <%= link_to t('csv_imports.index.delete', default: 'מחק'), hke.csv_import_path(import),
                          class: "text-red-600 hover:text-red-800 font-medium",
                          data: {
                            turbo_method: :delete,
                            turbo_confirm: t('csv_imports.index.confirm_delete', default: 'למחוק את הלוג הזה?')
                          } %>
                    </div>
                  </td>
                </tr>
              <% end %>
            </tbody>
          </table>
        </div>
      <% else %>
        <div class="text-center py-12">
          <p class="text-gray-500 mb-4"><%= t('csv_imports.index.no_imports', default: 'אין יבואים עדיין') %></p>
          <%= link_to t('csv_imports.index.create_first', default: 'צור יבוא ראשון'), hke.new_csv_import_path,
              class: "inline-block px-4 py-2 bg-blue-600 text-white rounded-md text-sm font-medium hover:bg-blue-700" %>
        </div>
      <% end %>
    </div>
  </div>
</div>

