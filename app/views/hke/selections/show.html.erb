<div class="container px-4 mx-auto my-8">
  <div class="max-w-3xl mx-auto">
    <div class="flex items-center justify-between mb-4">
      <h1 class="h3"><%= link_to "Selections", selections_path %> > Selection #<%= @selection.id %></h1>
      <%= link_to t("edit"), edit_selection_path(@selection), class: "btn btn-link" %>
    </div>

    <div class="p-8 bg-white rounded shadow">
      <div class="mb-4">
        <h5>Name</h5>
        <%= @selection.name %>
      </div>
      <div class="mb-4">
        <h5>Purpose</h5>
        <%= @selection.purpose %>
      </div>
    </div>
  </div>
</div>
