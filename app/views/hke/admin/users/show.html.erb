<div class="container px-4 mx-auto my-8">
  <div class="mx-auto">
    <div class="flex items-center justify-between mb-4">
      <h1 class="h3"><%= link_to t('admin.users.index.title'), admin_users_path %> </h1>
      <%= link_to t("edit"), edit_admin_user_path(@user), class: "btn btn-link" %>
    </div>

    <div class="p-8 bg-white rounded shadow">
    <div class="grid grid-cols-8">
      <div class="mb-4">
          <h5 class=""><%= t("name") %></h5>
          <%= @user.name %>
      </div>

      <div class="mb-4">
        <h5><%= t("email") %></h5>
        <%= @user.email %>
      </div>

      <div class="mb-4">
        <h5><%= t("admin.users.index.roles") %></h5>
        <%= @user.role_summary %>
      </div>
      
      <div class="mb-4">
        <h5><%= t("admin.users.index.community") %></h5>
        <%= @user.community_name %>
      </div>

      <div class="mb-4">
        <h5><%= t("created_at") %></h5>
        <%= @user.created_at.strftime("%B %d, %Y") %>
      </div>
    </div>
    </div>
  </div>
</div>
