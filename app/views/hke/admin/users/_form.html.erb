<%= form_with(model: [:admin, user]) do |form| %>
  <%= render "shared/error_messages", resource: form.object %>

  <div class="flex items-center justify-between mb-4 h4">
    <% if @user.persisted? %>
      <%= t("shared.scaffold.edit.title", model: t("admin.users.index.title")) + ": #{@user.name}" %>
    <% else %>
      <%= t("shared.scaffold.new.title", model: t("admin.users.index.title")) %>
    <% end %>
    <div class="mr-auto flex">
      <%= form.button t('save'), class: "btn btn-link" %>
      <% if form.object.persisted? && form.object != current_user %>
        <%= link_to t("delete"), [:admin, form.object], class: "btn btn-link", method: :delete, data: { confirm: t("are_you_sure") } %>
      <% end %>
      <%= link_to t("cancel"), [:admin, @user], class: "btn btn-link" %>
    </div>
  </div>

  <%= render "user_fields", form: form %>

<% end %>
