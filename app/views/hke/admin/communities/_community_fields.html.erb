<div data-controller="visibility">
  <div class="flex gap-4">
    <%= toggle_visibility_button if defined?(toggle_visibility_button) %>
    <div class="grid grid-cols-4 gap-2">
      <div class="field">
        <%= form.label :name, t('name'), class: "block text-sm font-medium text-gray-700" %>
        <%= form.text_field :name, class: "mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-indigo-500 focus:ring-indigo-500" %>
      </div>

      <div class="field">
        <%= form.label :community_type, t('community_type'), class: "block text-sm font-medium text-gray-700" %>
        <%= form.select :community_type, 
            options_for_select([
              ['בית כנסת', 'synagogue'],
              ['בית ספר', 'school']
            ], form.object.community_type), 
            { prompt: 'בחר סוג קהילה' },
            { class: "mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-indigo-500 focus:ring-indigo-500" } %>
      </div>

      <div class="field">
        <%= form.label :account_id, t('admin.communities.index.account'), class: "block text-sm font-medium text-gray-700" %>
        <%= form.collection_select :account_id, Account.all, :id, :name, 
            { prompt: 'בחר חשבון' },
            { class: "mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-indigo-500 focus:ring-indigo-500" } %>
      </div>
    </div>
  </div>
</div>
