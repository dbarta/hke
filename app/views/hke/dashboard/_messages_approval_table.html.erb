<div class="overflow-x-auto">
  <% if messages.any? %>
    <table class="min-w-full bg-white border border-gray-200 rounded-lg">
      <thead class="bg-gray-50">
        <tr>
          <th class="px-6 py-3 text-right text-xs font-medium text-gray-500 uppercase tracking-wider">
            <%= t('community_admin.dashboard.message_approval.table_headers.send_date') %>
          </th>
          <th class="px-6 py-3 text-right text-xs font-medium text-gray-500 uppercase tracking-wider">
            <%= t('community_admin.dashboard.message_approval.table_headers.message_preview') %>
          </th>
          <th class="px-6 py-3 text-right text-xs font-medium text-gray-500 uppercase tracking-wider">
            <%= t('community_admin.dashboard.message_approval.table_headers.approve') %>
          </th>
        </tr>
      </thead>
      <tbody class="bg-white divide-y divide-gray-200">
        <% messages.each do |message| %>
          <%= render partial: "hke/future_messages/message_row", locals: { message: message, time_filter: time_filter } %>
        <% end %>
      </tbody>
    </table>
  <% else %>
    <div class="text-center py-8 text-gray-500">
      <%= t('community_admin.dashboard.message_approval.no_messages') %>
    </div>
  <% end %>
</div>

<%= javascript_tag nonce: true do %>
  (function() {
    if (window.HkeMessageToggleInitialized) { return; }
    window.HkeMessageToggleInitialized = true;

    document.addEventListener('click', function(event) {
      var button = event.target.closest('[data-message-toggle]');
      if (!button) { return; }

      event.preventDefault();

      var messageId = button.dataset.messageId;
      var preview = document.getElementById('message_preview_' + messageId);
      var full = document.getElementById('message_full_' + messageId);

      if (!preview || !full) { return; }

      var expanded = button.getAttribute('aria-expanded') === 'true';
      if (expanded) {
        preview.hidden = false;
        full.hidden = true;
        button.setAttribute('aria-expanded', 'false');
        button.textContent = button.dataset.showMoreText;
      } else {
        preview.hidden = true;
        full.hidden = false;
        button.setAttribute('aria-expanded', 'true');
        button.textContent = button.dataset.showLessText;
      }
    });
  })();
<% end %>
